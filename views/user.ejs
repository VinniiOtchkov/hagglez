<div class="wrapper">
  <div class="userContainer">
    <div class="userInfo table">
      <div id="titley">
        <%= users[0].name %>
      </div>
      <br>
    </div>
    <div class="sellingInfo">
      <table class="table table-hover">
        <div class="title">Items for sale:</div>
        <thead>
          <tr>
            <th>Image</th>
            <th></th>
            <th>Item</th>
            <th>Description</th>
            <th>Haggles</th>
            <th>Haggle Price</th>
            <th>Update</th>
          </tr>
        </thead>
        <tbody>
          <a href="/items/addItem" id="newItem" type="submit">
            ADD Item
          </a>
          <% for(var i = 0; i < selling.length; i++) { %>
            <tr class="table-hover">
              <td id="imagePad"><img id="imagey" src="https://multimedia.bbycastatic.ca/multimedia/products/1500x1500/102/10262/10262918.jpg"></td>
                <td>
                  <td>
                    <%=selling[i].item_name%>
                  </td>
                  <td>
                    <%=selling[i].description%>
                  </td>
                  <td>
                    <%=selling[i].name%>
                  </td>
                  <td>
                    <%=selling[i].haggle_price%>
                  </td>
                  <td>
                      <br>

                      <a href="items/remove/:id">
                    <button type="button" id ="userButton" class="btn btn-default" data-container="body">Accept</button>
        </a>

                      <a href="items/remove/:id">
            <button type="button" id ="userButton" class="btn btn-default" data-container="body">Reject</button>
</a>


                  </td>

                  <td>
                    <br>
                    <a href="items/remove/:id">
                    <button type="button" class="btn btn-default" data-container="body">Edit</button>
        </a>


                    <a href="items/remove/:id">
                    <button type="button" class="btn btn-default" data-container="body">Delete</button>
        </a>
                  </td>


            </tr>


            <% } %>

        </tbody>
      </table>
    </div>
    <div class="buyingInfo">
      <table class="table table-hover">
        <div class="title">Haggling:</div>
        <thead>
          <tr>
            <th></th>
            <th>Image</th>
            <th>Item</th>
            <th>Haggle $</th>
            <th>Seller Name</th>
            <th>Location</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i = 0; i < buying.length; i++) { %>
            <tr>
              <td><img src="<%=buying[i].img_url%>">
                <td>
                  <td>
                    <%=buying[i].item_name%>
                  </td>
                  <td>$
                    <%=buying[i].haggle_price%>
                  </td>
                  <td>
                    <%=buying[i].seller_name%>
                  </td>
                  <td>
                    <%=buying[i].city%>
                  </td>
                  <td>
                    <%=buying[i].status%>
                  </td>
            </tr>
            <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
