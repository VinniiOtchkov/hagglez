<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Haggle <%=items.name%></title>
  </head>
  <body>
    <div class="userContainer">
    <table class="table table-hover">
      <thead>
        <tr>
        <th>img</th>
        <th>item name</th>
        <th>description</th>
        </tr>
      </thead>
    <tbody>

  <tr>
    <td><img src="<%=items.img_url%>"></td>
    <td><%=items.name%></td>
    <td><%=items.description%></td>
  </tr>

</tbody>
  </table>
</div>
<div class="haggleItemPage">
  <form action="/haggle" method="post">
    <input type="hidden" name="seller_id" value="<%=items.seller_id%>">
    <input type="hidden" name="item_id" value="<%=items.id%>">
    <input type="number" name="haggle_price" placeholder="Haggle!">
    <button class="haggleButton">Haggle</button>
  </form>
</div>
  </body>
</html>
