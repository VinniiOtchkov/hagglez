<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>New User</title>
  </head>
  <body>
    <div class="wrapper">
      <h1 id ="signupText">Signup</h1>
      <br>
    <form class="newForm" action="/user/new" method="post">


    <div class="form-group">
  <label class="control-label" for="inputDefault">Name:</label>
  <input type="text" name ="name" class="form-control" id="inputDefault" placeholder="i.e. John Doe">
</div>

<br>

<div class="form-group">
  <label class="control-label" for="inputDefault">Email:</label>
  <input type="text" name ="email" class="form-control" id="inputDefault" placeholder="i.e. example@example.com">
</div>

<br>

<div class="form-group">
  <label class="control-label" for="inputDefault">Password:</label>
  <input type="password" name ="password" class="form-control" id="inputDefault" placeholder="Make sure it's secure!">
</div>

<div class="form-group">

  <label class="control-label" for="inputDefault">Region:</label>
  <br>
  <select name="location_id">
    <% for(var i = 0; i < locations.length; i++) { %>
  <option value="<%=locations[i].id%>" name="<%=locations[i].id%>" placeholder="<%=locations[i].name%>"><%=locations[i].city%></option>
  <% } %>
</select>
</div>

<br>

<button class="btn btn-primary btn-lg" type="submit" id="haggleButton" style="background-color:#BD321F;">
  <div id="haggleText">Submit User</div>
</button>
</form>

</div>

  </body>
</html>
